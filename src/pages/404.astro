---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
---

<BaseLayout title="Page Not Found">
    <main id="main-content" class="min-h-screen flex items-center justify-center">
        <Section>
            <div class="text-center">
                <p class="text-6xl font-light text-content-lighter mb-4">404</p>
                <h1 class="text-2xl font-semibold text-content mb-4">Page not found</h1>
                <p class="text-content-light mb-8">
                    The page you are looking for does not exist.
                </p>
                <a href="/" class="text-content underline hover:no-underline cursor-pointer">
                    Go back home
                </a>
            </div>
        </Section>
    </main>
</BaseLayout>
